<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.nikolapehnec.SplashFragment"
        tools:layout="@layout/fragment_splash">

        <action
            android:id="@+id/actionToLogin"
            app:destination="@id/login"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/login"
        android:name="com.nikolapehnec.LoginFragment"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/actionLoginToShows"
            app:destination="@id/shows"
            app:popUpTo="@id/login"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/actionLoginToRegister"
            app:destination="@id/register"
            app:popUpTo="@id/register"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/register"
        android:name="com.nikolapehnec.RegisterFragment"
        tools:layout="@layout/fragment_register" />

    <fragment
        android:id="@+id/shows"
        android:name="com.nikolapehnec.ShowsFragment"
        tools:layout="@layout/activity_shows">

        <action
            android:id="@+id/actionShowToDetail"
            app:destination="@id/showDetail" />

        <action
            android:id="@+id/actionLogout"
            app:destination="@id/login"
            app:popUpTo="@id/shows"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/showDetail"
        android:name="com.nikolapehnec.ShowDetailFragment"
        tools:layout="@layout/fragment_show_details">

        <argument
            android:name="showId"
            app:argType="integer" />

    </fragment>


</navigation>