<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="title">
        <item name="android:textSize">34sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="titleBlack">
        <item name="android:textSize">34sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="subtitleBlack">
        <item name="android:textSize">25sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="regular">
        <item name="android:textSize">17sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="welcome_style">
        <item name="android:textSize">17sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">#808080</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">#fff</item>
        <item name="boxStrokeColor">#fff</item>
        <item name="android:textColorHint">#fff</item>
        <item name="android:textColor">#fff</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="colorControlNormal">#fff</item>
        <item name="colorControlActivated">#fff</item>
        <item name="colorControlHighlight">#fff</item>
    </style>

    <style name="ReviewTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/background</item>
        <item name="boxStrokeColor">@color/background</item>
        <item name="android:textColorHint">@color/background</item>
        <item name="android:textColor">@color/background</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="colorControlNormal">@color/background</item>
        <item name="colorControlActivated">@color/background</item>
        <item name="colorControlHighlight">@color/background</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/background</item>
        <item name="colorControlActivated">@color/background</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="Widget.AppCompat.Toolbar">
        <item name="android:textColorSecondary">@color/black</item>
    </style>

    <style name="roundedImageViewRounded">
        <item name="tint">@color/white</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>